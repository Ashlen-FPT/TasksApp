<style>
    #buttDis {
        /*pointer-events: none;*/
        cursor: no-drop;
        filter: alpha(opacity=65);
        -webkit-box-shadow: none;
        box-shadow: none;
    }
</style>
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light ml-auto">
    <!-- Left navbar links -->

    <ul class="navbar-nav">
        @*<li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>*@

        @if (User.Identity.IsAuthenticated)
        {

            <li class="nav-item d-none d-sm-inline-block" style="padding-right:20px;">

                @if (User.IsInRole(SD.Role_Operator.ToString()))
                {
                    <button type="button" class=" nav-link btn fa fa-user-alt " id="buttDis">  Logged In : Operator - @User.FindFirst("Username").Value</button>
                }

                @if (User.IsInRole(SD.Role_Supervisor.ToString()))
                {
                    <button type="button" class=" nav-link btn  fa fa-user-alt " id="buttDis">  Logged In : Supervisor - @User.FindFirst("Username").Value</button>
                }

                @if (User.IsInRole(SD.Role_Admin.ToString()))
                {
                    <button type="button" class=" nav-link btn fa fa-user-alt " id="buttDis">  Logged In : Admin - @User.FindFirst("Username").Value</button>
                }

            </li>
            <li class="nav-item d-none d-sm-inline-block" style="padding-right:20px;">

                <button type="button" class=" nav-link btn fa fa-building " id="buttDis">  Organization : @User.FindFirst("Organization").Value</button>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    
                    <button type="submit" class="nav-link btn btn-info fa fa-sign-out-alt"> Log Out</button>
                </form>
            </li>

        }
        else
        {
            <li class="nav-item d-none d-sm-inline-block">
                <a id="logBTN" asp-area="Identity" asp-page="/Account/Login" class="nav-link btn btn-success fa fa-user"> Login</a>

            </li>
            <li>
                &nbsp;
                &nbsp;
                &nbsp;
                &nbsp;
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a id="regBTN" asp-area="Identity" asp-page="/Account/Register" class="nav-link btn btn-warning fa fa-user-plus"> Register </a>
            </li>
        }
    </ul>

    <!-- Right navbar links -->
