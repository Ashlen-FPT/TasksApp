<!-- Add Task Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label style="float:left" class="control-label">Description</label>
                    <input id="Description" class="form-control" />
                </div>

                <div class="form-group">
                    <label style="float:left" class="control-label">Task Type</label>
                    <select id="TaskType" class="form-control ">
                        <option>Tasks</option>
                        <option>PreTasks</option>
                        @*<option>Tasks Category</option>*@
                    </select>
                </div>

                <div class="form-group">
                    <label style="float:left" class="control-label">Checklist Item</label>
                    <select id="CheckList" class="form-control ">
                        <option>Calibration</option>
                        <option>Weighbridge Test</option>
                        <option>Brake Test</option>
                    </select>
                </div>

                <div class="form-group">
                    <label style="float:left" class="control-label">Schedule</label>
                    <select id="Schedule" class="form-control">
                        <option>Daily</option>
                        <option>Weekly</option>
                        <option>Monthly</option>
                        <option>Quarterly</option>
                        <option>Bi-Annually</option>
                        <option>Annually</option>
                    </select>
                </div>

                <div id="Days" style="display:none">
                    <input type="radio" id="Monday" name="fav_language" value="Monday">
                    <label for="Monday">M</label>

                    <input type="radio" id="Tuesday" name="fav_language" value="Tuesday">
                    <label for="Tuesday">T</label>

                    <input type="radio" id="Wednesday" name="fav_language" value="Wednesday">
                    <label for="Wednesday">W</label>

                    <input type="radio" id="Thursday" name="fav_language" value="Thursday">
                    <label for="Thursday">T</label>

                    <input type="radio" id="Friday" name="fav_language" value="Friday">
                    <label for="Friday">F</label>

                    <input type="radio" id="Saturday" name="fav_language" value="Saturday">
                    <label for="Saturday">S</label>

                    <input type="radio" id="Sunday" name="fav_language" value="Sunday">
                    <label for="Sunday">S</label>
                </div>

                <div id="Months" style="display:none">
                    <input type="radio" id="Beginning" name="fav" value="Beginning">
                    <label for="Beginning">B</label>

                    <input type="radio" id="End" name="fav" value="End">
                    <label for="End">E</label>
                </div>

                <div id="Quart" style="display:none">
                    <input type="radio" id="1st_Quarter" name="quart" value="1st_Quarter">
                    <label for="1st_Quarter">1st Quarter</label>

                    <input type="radio" id="2nd_Quarter" name="quart" value="2nd_Quarter">
                    <label for="2nd_Quarter">2nd Quarter</label>

                    <input type="radio" id="3rd_Quarter" name="quart" value="3rd_Quarter">
                    <label for="3rd_Quarter">3rd Quarter</label>

                    <input type="radio" id="4th_Quarter" name="quart" value="4th_Quarter">
                    <label for="4th_Quarter">4th Quarter</label>
                </div>

                <div id="Bi_Annually" style="display:none">
                    <input type="radio" id="1st" name="bi" value="1st">
                    <label for="1st">1st</label>

                    <input type="radio" id="2nd" name="bi" value="2nd">
                    <label for="2nd">2nd</label>
