    $(document).ready(function () {
        var date = new Date(document.getElementById("datePicker").value)
        var dayOfWeek = date.getUTCDay();
        console.log(dayOfWeek);
        loadTable(date, dayOfWeek);

        $.ajax({
            type: "GET",
            dataType: 'json',
            url: "/Items/GetAll?date=" + date + "dayOfWeek=" + dayOfWeek,
            async: false,
            success: function (response) {
                var count = 0;

                for (var i = 0; i < response.data.length; i++) {

                    if (response.data[i].isDone == true) {
                        count += 1;
                    }

                }

                var p = (count / response.data.length) * 100;
                if (p == 0) {
                    document.getElementById("progressbar").style.width = "0%";
                    document.getElementById("progressbar").innerHTML = "0%";
                }
                else {
                    document.getElementById("progressbar").style.width = p + "%";
                    document.getElementById("progressbar").innerHTML = Math.round(p) + "%";
                }
            }
        });
    });


