<!-- Add Task Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label style="float:left" class="control-label">Description</label>
                    <input id="Description" class="form-control" />

                </div>

                <div class="form-group">
                    <label style="float:left" class="control-label">Task Category</label>
                    <select id="TaskType" class="form-control ">
                        <option>Active_D</option>
                        <option>Hardware</option>
                        <option>Networking</option>
                        <option>OS/Software</option>
                        <option>Security</option>
                    </select>
                </div>

                <div class="form-group">
                    <label style="float:left" class="control-label">Schedule</label>
                    <select id="Schedule" class="form-control">
                        <option>Daily</option>
                        <option>Weekly</option>
                        <option>Monthly</option>
                        <option>Quarterly</option>
                        <option>Bi-Annually</option>
                        <option>Annually</option>
                    </select>
                </div>

                <div style="float: left;">
                    <div id="Days" style="display:none">
                        <input type="radio" id="Monday" name="fav_language" value="Monday">
                        <label for="Monday">Monday</label>
                        &nbsp;
                        <input type="radio" id="Tuesday" name="fav_language" value="Tuesday">
                        <label for="Tuesday">Tuesday</label>
                        &nbsp;
                        <input type="radio" id="Wednesday" name="fav_language" value="Wednesday">
                        <label for="Wednesday">Wednesday</label>
                        &nbsp;
                        <input type="radio" id="Thursday" name="fav_language" value="Thursday">
                        <label for="Thursday">Thursday</label>
                        &nbsp;
                        <input type="radio" id="Friday" name="fav_language" value="Friday">
                        <label for="Friday">Friday</label>
                        <br />
                        <input type="radio" id="Saturday" name="fav_language" value="Saturday">
                        <label for="Saturday">Saturday</label>
                        &nbsp;
                        <input type="radio" id="Sunday" name="fav_language" value="Sunday">
                        <label for="Sunday">Sunday</label>
                    </div>
                </div>

                <div id="Months" style="display:none">
                    <input type="radio" id="Beginning" name="fav" value="Beginning">
                    <label for="Beginning">Beginning Of Month</label>
                    &nbsp;
                    <input type="radio" id="End" name="fav" value="End">
                    <label for="End">End Of Month</label>
                </div>

                <div id="Quart" style="display:none">
                    <input type="radio" id="Beginning" name="quart" value="Beginning">
                    <label for="Beginning">Beginning Of Quarter</label>
                    &nbsp;
                    <input type="radio" id="End" name="quart" value="End">
                    <label for="End">End Of Quarter</label>
                </div>

                <div id="Bi_Annually" style="display:none">
                    <input type="radio" id="1st" name="bi" value="1st">
                    <label for="1st">1st</label>
                    &nbsp;
                    <input type="radio" id="2nd" name="bi" value="2nd">
                    <label for="2nd">2nd</label>
                </div>

                <div id="Annual" style="display:none">
                    <input type="radio" id="Beginning" name="ann" value="Beginning">
                    <label for="Beginning">Beginning Of Year</label>
                    &nbsp;
                    <input type="radio" id="Mid" name="ann" value="Mid">
                    <label for="Mid">Middle Of Year</label>
                    &nbsp;
