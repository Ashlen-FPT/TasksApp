    function AddTask() {

        var Desc = $('#Description').val();
        var Schedule = $('#Schedule').val();
        var Type = $('#TaskType').val();

        var Day = document.querySelector('input[name="fav_language"]:checked');

        if (Day == null) {
            Day = "";
        }
        else {
            Day = Day.value;
        }

        var Month = document.querySelector('input[name="fav"]:checked');

        if (Month == null) {
            Month = "";
        }
        else {
            Month = Month.value;
        }

        var Quarter = document.querySelector('input[name="quart"]:checked');

        if (Quarter == null) {
            Quarter = "";
        }
        else {
            Quarter = Quarter.value;
        }

        var Bi_Annual = document.querySelector('input[name="bi"]:checked');

        if (Bi_Annual == null) {
            Bi_Annual = "";
        }
        else {
            Bi_Annual = Bi_Annual.value;
        }

        var Annual = document.querySelector('input[name="ann"]:checked');

        if (Annual == null) {
            Annual = "";
        }
        else {
            Annual = Annual.value;
        }

        $.ajax({
            type: "POST",
            url: "/Main_Task/AddTask?Desc=" + Desc + "&Schedule=" + Schedule + "&Day=" + Day + "&Month=" + Month + "&CType=" + Type + "&Quarter=" + Quarter + "&Bi_Annually=" + Bi_Annual + "&Annual=" + Annual,
            success: function (data) {
                if (data.success) {

                    $("#exampleModal").modal("toggle")
                    $('body').removeClass('modal-open');
                    $('.modal-backdrop').remove();

                    swal(data.message, "", "success");
                    Table01.ajax.reload();
                    Table02.ajax.reload();
                    Table03.ajax.reload();
                    Table04.ajax.reload();
                    Table05.ajax.reload();
                    Table06.ajax.reload();
                }
                else {
                    swal(data.message, "", "error");
                    //toastr.error(data.message);
                }
            }
        });
    }

    function Delete(url) {
        swal({
            title: "Are you sure you want to Delete?",
            text: "You will not be able to restore the data!",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "DELETE",
                    url: url,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            Table01.ajax.reload();
                            Table02.ajax.reload();
                            Table03.ajax.reload();
                            Table04.ajax.reload();
                            Table05.ajax.reload();
                            Table06.ajax.reload();
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                });
            }
        });
    }

