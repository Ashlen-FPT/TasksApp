@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<style>
    .card {
        margin: 0 auto;
        float: none;
        margin-bottom: 10px;
        border-radius: 20px;
        opacity: 0.90;
        background-color: yellowgreen;
    }

    #ForgotpasswordpageBody {
        font-family: 'PT Sans', sans-serif !important;
        background-image: url('/images/Reg.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        margin: 0;
    }
</style>
<body id="ForgotpasswordpageBody">


    <div class="card" style="width: 500px;">
        <center><h1>@ViewData["Title"]</h1></center>
        <hr />
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" style="float:right;" class="btn btn-success active">Submit</button>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
